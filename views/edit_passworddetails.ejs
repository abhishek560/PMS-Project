<%- include('header') %>

        <div class="container">
            <div class="row">
          <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="panel panel-info">
                  <div class="panel-heading">
                      <div class="panel-title"> Edit Password Details</div>
                       </div>  
                  <div class="panel-body">
                      <form action="/password-details/edit/<%= record._id %>" id="passwordForm" class="form-horizontal" method="post"  role="form">
                        <% if(success != ''){ %>
                          <div id="signupalert" class="alert alert-success">
                            <p><%= success %></p>
                          </div> 
                          <% } %> 


                        <div class="form-group">
                            <label for="username" class="col-md-3 control-label">Password Details</label>
                            <div class="col-md-9">
                                <select class="form-control" name="pass_cat">
                                    <option value="">Choose Password Category</option>
                                    <% if(records.length > 0) { 
                                      records.forEach(function(row){
                                      %>
                                      <option value="<%= row.password_categorys %>" <% if(row.password_categorys == record.password_categorys){ %> selected <% } %>><%= row.password_categorys %></option>
                                    <% }) } %>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                          <label for="username" class="col-md-3 control-label">Project Name</label>
                          <div class="col-md-9">
                              <input type="textbox" class="form-control"  name="project_name"  placeholder="Enter Project Name" value="<%= record.project_name %>">
                          </div>
                       </div>

                          <div class="form-group">
                              <label for="username" class="col-md-3 control-label">Password Details</label>
                              <div class="col-md-9">
                                  <textarea class="form-control" rows="5" id="editor" name="pass_details"  placeholder="Enter Password Details"><%= record.password_details %></textarea>
                              </div>
                          </div>
                          
                          <input type="hidden" name="id" value="<%= record._id %>">

                          <div class="form-group">
                              <!-- Button -->                                        
                              <div class="col-md-offset-3 col-md-9">
                              <input type="submit" name="submit" value="Update Password" class="btn btn-primary">   
                              </div>
                          </div>
                          <p><a href="/view-all-password">View All Password List</a></p>
                          
                      </form>
                   </div>
              </div>       
            </div> 
         </div>
          </div>
        </div>

        <script>
          CKEDITOR.replace( 'editor' );
      </script> 
  <%- include('footer') %>