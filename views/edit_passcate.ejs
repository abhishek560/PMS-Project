<%- include('header') %>

        <div class="container">
            <div class="row">
          <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="panel panel-info">
                  <div class="panel-heading">
                      <div class="panel-title"> Edit Password Category</div>
                       </div>  
                  <div class="panel-body">
                      <form action="/passCategory/edit/" id="EmployeeForm" class="form-horizontal" method="post"  role="form">
                        <% if(errors != ''){ %>
                          <div id="signupalert" class="alert alert-danger">
                            <p><%= errors.passcategory.msg %></p>
                          </div> 
                          <% } %> 

                          <% if(success != ''){ %>
                            <div id="signupalert" class="alert alert-success">
                              <p><%= success %></p>
                            </div> 
                            <% } %> 

                          <div class="form-group">
                              <label for="username" class="col-md-3 control-label">Category Name</label>
                              <div class="col-md-9">
                                  <input type="text" class="form-control" name="passcategory" value="<%= records.password_category %>" placeholder="Enter Category Name">
                              </div>
                          </div>
                          
                          <div class="form-group">
                              <!-- Button -->                                        
                              <div class="col-md-offset-3 col-md-9">
                              <input type="submit" name="submit" value="Update Category" class="btn btn-primary">   
                              </div>
                          </div>
                          <p><a href="/passCategory">View All Category List</a></p>
                          
                      </form>
                   </div>
              </div>       
            </div> 
         </div>
          </div>
        </div>
        <%- include('footer') %>